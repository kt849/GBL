<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlt"
    tools:context=".ProductionGraphs">

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:visibility="invisible" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart2"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="124dp" />


    <Button
        android:id="@+id/greport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@android:color/background_light"
        android:onClick="greport"
        android:text="Get Report"
        android:textColor="@android:color/holo_blue_bright" />

    <Button
        android:id="@+id/logout"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:drawableTop="@drawable/ic_logout"
        android:onClick="Logout"
        android:text="Logout"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="Press to fetch data" />

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/colorBackground"
        android:drawableTop="@drawable/ic_back"
        android:onClick="backtomenu"
        android:text="back"
        android:textColor="@android:color/holo_blue_bright" />


</RelativeLayout>